<?xml version="1.0" encoding="utf-8" ?>
<bv:BaseContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetX.AppLauncher.Controls.UCButtonView"
             xmlns:bv="clr-namespace:NetX.AppCore;assembly=NetX.AppCore">
        <VerticalStackLayout>
            <Button
                Text="可用"
                IsEnabled="True"
                CornerRadius="20"
                WidthRequest="90"
                HeightRequest="40"
                Margin="0,5,0,5"/>
            <Button
                Text="禁用"
                IsEnabled="False"
                WidthRequest="90"
                HeightRequest="40"
                Margin="0,5,0,5"/>
        <Button
                Text="无参数"
                Command="{Binding NoParamCommand}"
                WidthRequest="90"
                HeightRequest="40"
                Margin="0,5,0,5"/>
        <Button
                Text="带参数"
                Command="{Binding ParamCommand}"
                CommandParameter="CommandParameter"
                WidthRequest="90"
                HeightRequest="40"
                Margin="0,5,0,5"/>
        <Button 
                Text="带图像"
                ImageSource="Resource/Images/test1.png"
                ContentLayout="Right,20"
                WidthRequest="90"
                HeightRequest="70"
                Margin="0,5,0,5"/>
    </VerticalStackLayout>
</bv:BaseContentView>
